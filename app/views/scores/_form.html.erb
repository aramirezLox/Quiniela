
<%= simple_form_for(@score) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :club %>
    <%= f.input :score %>
    <%= f.input :win %>
    <%= f.input :lost %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

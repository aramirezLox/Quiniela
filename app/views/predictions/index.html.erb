<p style="color: green"><%= notice %></p>

<div id="index_predictions" style="display: flex">
<div id="predictions" style="display: grid">
<h1>Predictions</h1>

  <% @predictions.each do |prediction| %>
    <%= render prediction %>
    <p>
      <%= link_to "Show this prediction", prediction %>
    </p>
  <% end %>
</div>

<%= link_to "New prediction", new_prediction_path %>

  <div style="display: grid">
    <h2>Matches</h2>
      <% @matches.each do |match| %>
        <%= render match %>
      <%end%>
  </div>

  <div >
    <h2>Users</h2>
    <p>
      User: <%=@summary_points.first[:email]%>
    </p>
    <p>
      Points: <%=@summary_points.first[:points]%>
    </p>
  </div>
</div>